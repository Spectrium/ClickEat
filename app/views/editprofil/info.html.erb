<h2>
  Edit info
  <%= resource_name.to_s.humanize %>
</h2>
<% console %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class:"container-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <!-- <div class="form-group"> -->
      <% if current_user.avatar.attached? %>
        <%= image_tag(current_user.avatar, width: 100) %>
          <% else %>
            <%= image_tag gravatar_image_url(current_user.email, width: 100) %>
              <% end %>
                <!-- </div> -->

                <%= f.label :avatar do %>
                  <%= f.file_field :avatar, class:"form-input" %>
                    <% end %>
                      <%= f.text_field :username, autofocus: true, autocomplete: "username",placeholder:"User name", class:"form-input", value: current_user.username %>
                        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder:"First name", class:"form-input", value:current_user.first_name %>
                          <%= f.text_field :last_name, autofocus: true,placeholder:"Last name", class:"form-input", value:current_user.last_name%>
                            <%= f.password_field :current_password, autocomplete: "current-password",placeholder:"Current Password", class:"form-input" %>
                              <div class="actions">
                                <%= f.submit "Update", class:"connection-btn all-btn" %>
                              </div>
                              <% end %>