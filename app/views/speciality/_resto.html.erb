<li>
    <div>
        <i class="fa fa-bookmark fa-5x position-absolute" aria-hidden="true" style="color: <%= item.subscription.color %>; z-index: 1; right:-1px; margin-top:-3px;"></i>
        <%= image_tag item.logo, alt:"menu-dish", class:"m-0" %>
            <a href="<%=restaurant_path(item.id)%>">
                <div>
                    <img src="/assets/plus-icon.png" alt="plus-icon">
                    <p>Cliquer pour en savoir plus</p>
                </div>
            </a>
    </div>
    <h5>
        <%= item.name %>
    </h5>
    <div class="like-jaime">
                <%= link_to like_restaurant_path(item), method: :put do %>
                    <i class="fa fa-thumbs-up fa-2x" style="color: #ff6a00"></i>
                    <% end %>
                        <%= link_to dislike_restaurant_path(item), method: :put do %>
                            <i class="fa fa-thumbs-down fa-2x" style="color: #ff6a00"></i>
                            <% end %>
                                <br>
                                <%= item.get_upvotes.size %> &nbsp&nbsp&nbsp&nbsp
                                    <%= item.get_downvotes.size %>
            </div>
</li>