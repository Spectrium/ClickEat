<body class="background-sign-in">
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <!-- <form action="#" class="container-form"> -->
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"container-form") do |f| %>
                <h1 class="header-h1">Sign in</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span class="message-connection">or use your account</span>
                <!-- <input type="email" placeholder="Email" class="form-input" /> -->
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-input" %>
                    <!-- <input type="password" placeholder="Password" class="form-input" /> -->
                    <%= f.password_field :password, autocomplete: "current-password", class:"form-input" %>
                        <!-- <a href="#" class="social">Forgot your password?</a> -->
                        <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                                <!-- <button class="connection-btn all-btn">Sign In</button> -->
                                <%= f.submit "Log in",class:"connection-btn all-btn" %>
                                    <% end %>
                                        <!-- </form> -->
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1 class="header-h1">Welcome Back!</h1>
                    <p class="para-container">To keep connected with us please login with your personal info</p>
                    <button class="ghost all-btn" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1 class="header-h1">Hello, Friend!</h1>
                    <p class="para-container">Enter your personal details and start journey with us</p>
                    <button class="ghost all-btn" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
</body>