<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Commande en attente
      </h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- .row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <span style="font-size: 23px;font-weight: bold;">Tableau pour g√©rer les commandes en attente</span> &nbsp;<br>
      </div>
      <!-- ./panel-heading -->
    </div>
    <div class="panel-body">
      <% if flash[:success] %>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
        <% end %>
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>id</th>
                <th>prix</th>
                <th></th>
              </tr>
              <!-- /tr -->
            </thead>
            <!-- /thead -->
            <tbody>
              <% for index_order in 0 ... @orders.size %>
                <tr>
                  <td>
                    <%= @orders[index_order].id %>
                  </td>
                  <td>
                    <%= @orders[index_order].amount %>
                  </td>
                  <td>
                    <%= @orders[index_order].payed %>
                  </td>
                  <td>
                    <%= @orders[index_order].confirmed %>
                  </td>
                </tr>
                <% end %>
            </tbody>
            <!-- /tbody -->

    </div>
  </div>
  <script src="/assets/vendor/metisMenu/metisMenu.min.js"></script>
  <script src="/assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
  <script src="/assets/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
  <script src="/assets/vendor/datatables-responsive/dataTables.responsive.js"></script>
  <script>
    $(document).ready(function() {
      $('#dataTables-example').DataTable({
        responsive: true
      });
    });
  </script>