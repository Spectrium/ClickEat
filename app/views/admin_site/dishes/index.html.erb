<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Nos plats
      </h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- .row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <span style="font-size: 23px;font-weight: bold;">Tableau pour gérer nos plats</span> &nbsp;|<br>
        <a href="<%= new_admin_site_dish_path %>"><i class="fa fa-plus fa-fw"></i>Créer un nouveau plat</a>
      </div>
      <!-- ./panel-heading -->
    </div>
    <div class="panel-body">
      <% if flash[:success] %>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
        <% end %>
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>id</th>
                <th>name</th>
                <th>price</th>
                <th>temps de préparation</th>
                <% if current_admin.type_admin_id ==1 %>
                  <th>restaurant</th>
                  <% end %>
                    <th>suppression</th>
                    <th>edit</th>
                    <th>voir</th>
              </tr>
              <!-- /tr -->
            </thead>
            <!-- /thead -->
            <tbody>
              <% for index_dish in 0 ... @dishes.size %>
                <tr>
                  <td>
                    <%= @dishes[index_dish].id %>
                  </td>
                  <!-- /td -->
                  <td>
                    <%= @dishes[index_dish].name %>
                  </td>
                  <!-- /td -->
                  <td>
                    <%= @dishes[index_dish].price %>
                  </td>
                  <!-- /td -->
                  <td>
                    <%= @dishes[index_dish].preparation_time %>
                  </td>
                  <!-- /td -->
                  <% if current_admin.type_admin_id ==1 %>
                    <td>
                      <%= @dishes[index_dish].restaurant.name %>
                    </td>
                    <% end %>
                      <!-- /td -->
                      <td>
                        <a href="<%= admin_site_dish_path(@dishes[index_dish]) %>" data-confirm="Are you sure?" rel="nofollow" data-method="delete">
                          <i class="fa fa-trash" aria-hidden="true">
                      </i>
                        </a>
                      </td>
                      <!-- /td -->
                      <td>
                        <a href="<%= edit_admin_site_dish_path(@dishes[index_dish]) %>">
                          <i class="fa fa-edit" aria-hidden="true">
                          </i>
                        </a>
                      </td>
                      <!-- /td -->
                      <td>
                        <a href="#">
                          <i class="fa fa-eye" aria-hidden="true">
                          </i>
                        </a>
                      </td>
                      <!-- /td -->
                </tr>
                <!-- /tr -->
                <% end %>
            </tbody>
            <!-- /tbody -->
          </table>
          <!-- /table -->
    </div>
    <!-- .col-lg-12 -->
  </div>
  <!-- ./row -->
</div>
<!-- /wrapper -->
<script src="/assets/vendor/metisMenu/metisMenu.min.js"></script>
<script src="/assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="/assets/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="/assets/vendor/datatables-responsive/dataTables.responsive.js"></script>
<script>
  $(document).ready(function() {
    $('#dataTables-example').DataTable({
      responsive: true
    });
  });
</script>