<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Nos commandes
      </h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- .row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel">
        <span style="font-size: 23px;font-weight: bold;">Tableau des commandes</span> &nbsp;|<br>
      </div>
      <!-- ./panel-heading -->
    </div>
    <div class="panel-body">
      <% if flash[:success] %>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
        <% end %>
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <!-- id: nil, quantity: 1, dish_id: nil, cart_id: nil, order_id: nil, received: false, canceled: false, payed: false, amount: nil -->
                <th>id</th>
                <th>plat</th>
                <th>quantité</th>
                <th>payé</th>
                <th>Montant</th>
                <th></th>
              </tr>
              <!-- /tr -->
            </thead>
            <!-- /thead -->
            <tbody>
              <% for index_item in 0 ... @all_items.size %>
                <tr>
                  <td>
                    <%= @all_items[index_item].id %>
                  </td>
                  <td>
                    <%= @all_items[index_item].dish.name %>
                  </td>
                  <td>
                    <%= @all_items[index_item].quantity %>
                  </td>
                  <td id="state_payed_<%= @all_items[index_item].id %>">
                    <%= render "payed", item: @all_items[index_item] %>
                  </td>
                  <td>
                    <%= @all_items[index_item].amount %>
                  </td>
                  <td>
                    <a href="<%= edit_admin_site_order_state_path( @all_items[index_item]) %>">
                      <i class="fa fa-edit" aria-hidden="true">
                                    </i>
                    </a>
                  </td>
                </tr>
                <% end %>
            </tbody>
            <!-- /tbody -->

    </div>
  </div>
  <script src="/assets/vendor/metisMenu/metisMenu.min.js"></script>
  <script src="/assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
  <script src="/assets/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
  <script src="/assets/vendor/datatables-responsive/dataTables.responsive.js"></script>
  <script>
    $(document).ready(function() {
      $('#dataTables-example').DataTable({
        responsive: true
      });
    });
  </script>