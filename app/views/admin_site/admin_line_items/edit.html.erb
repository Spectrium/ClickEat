<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Modifier l'etat de commande</h1>
      <!-- /page-header -->
    </div>
    <!-- /col-lg-12 -->
  </div>
  <!-- /row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <span style="font-size: 23px;font-weight: bold;">
                  Accepter une commande
                </span><br>
          <a href="<%= admin_site_admin_line_items_path %>"><i class="fa fa-plus fa-fw"></i>Liste des commandes en attente</a> &nbsp; |
          <!-- /span -->
        </div>
        <!-- /panel-heading -->
        <div class="panel-body">
          <% if flash[:success] %>
            <div class="alert alert-success">
              <%= flash[:success] %>
            </div>
            <!-- /alert alert-success -->
            <% end %>
              <% if flash[:error] %>
                <div class="alert alert-danger">
                  <%= flash[:error] %>
                </div>
                <% end %>
                  <div class="col-md-offset-2 col-md-8">
                    <!-- Formulaire -->
                    <%= render "form", line_item: @line_item %>
                      <!-- /Formulaire -->
                  </div>
                  <!-- /col-md-offset-2 col-md-8 -->
        </div>
        <!-- /panel-body -->
      </div>
      <!-- /panel panel-default -->
    </div>
    <!-- /col-lg-12 -->
  </div>
  <!-- /row -->
</div>
<!-- /page-wrapper -->