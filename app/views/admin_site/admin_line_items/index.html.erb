<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Les commandes en attente de confirmation
      </h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- .row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel">
        <span style="font-size: 23px;font-weight: bold;">Tableau pour gérer les commandes en attente</span> &nbsp;<br>
      </div>
      <!-- ./panel-heading -->
    </div>
    <div class="panel-body">
      <% if flash[:success] %>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
        <% end %>
          <% if flash[:error] %>
            <div class="alert alert-success">
              <%= flash[:error] %>
            </div>
            <% end %>
              <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                  <tr>
                    <th>id</th>
                    <th>plat</th>
                    <th>Quantité</th>
                    <% if current_admin.type_admin_id != 1 %>
                      <th>Editer</th>
                      <% end %>
                  </tr>
                  <!-- /tr -->
                </thead>
                <!-- /thead -->
                <tbody>
                  <% for index_line_item in 0 ... @line_items.size %>
                    <tr>
                      <td>
                        <%= @line_items[index_line_item].id %>
                      </td>
                      <!-- /td -->
                      <td>
                        <%= @line_items[index_line_item].dish.name %>
                      </td>
                      <!-- /td -->
                      <td>
                        <%= @line_items[index_line_item].quantity %>
                      </td>
                      <!-- /td -->
                      <% if current_admin.type_admin_id != 1 %>
                        <td>
                          <a href="<%= edit_admin_site_admin_line_item_path(@line_items[index_line_item].id) %>">
                            <i class="fa fa-edit" aria-hidden="true">
                          </i>
                          </a>
                        </td>
                        <% end %>
                          <!-- /td -->
                    </tr>
                    <!-- /tr -->
                    <% end %>
                </tbody>
                <!-- /tbody -->
              </table>
              <!-- /table -->
    </div>
    <!-- .col-lg-12 -->
  </div>
  <!-- ./row -->
</div>
<!-- /wrapper -->
<script src="/assets/vendor/metisMenu/metisMenu.min.js"></script>
<script src="/assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="/assets/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="/assets/vendor/datatables-responsive/dataTables.responsive.js"></script>
<script>
  $(document).ready(function() {
    $('#dataTables-example').DataTable({
      responsive: true
    });
  });
</script>