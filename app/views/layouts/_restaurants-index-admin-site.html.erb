<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Nos Restaurants</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <span style="font-size: 23px;font-weight: bold;">Tableau pour gérer les réstaurants</span> &nbsp;|<a href="<%= new_admin_site_restaurant_path %>"><i class="fa fa-plus fa-fw"></i>Créer un nouveau restaurant</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <% if flash[:success] %>
            <div class="alert alert-success">
              <%= flash[:success] %>
            </div>
            <% end %>
              <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                  <tr>
                    <th>Logo</th>
                    <th>Nom du réstaurant</th>
                    <th>Location</th>
                    <th>Picture</th>
                    <th>Email</th>
                    <th>suppression</th>
                    <th>edit</th>
                    <th>Voir</th>
                  </tr>
                </thead>
                <tbody>
                  <% for index_restaurant in 0 ... @all_restaurants.size%>
                    <tr class="odd gradeX">
                      <td>
                        <% if @all_restaurants[index_restaurant].logo.attached? %>
                          <%= image_tag(@all_restaurants[index_restaurant].logo, height:"50") %>
                            <% else %>
                              pas de logo pour le moment
                              <% end %>
                      </td>
                      <td>
                        <%= @all_restaurants[index_restaurant].name %>
                      </td>
                      <td>
                        <%= @all_restaurants[index_restaurant].location %>
                      </td>
                      <td>
                        <% if @all_restaurants[index_restaurant].picture.attached? %>
                          <%= image_tag(@all_restaurants[index_restaurant].picture, height:"50") %>
                            <% else %>
                              pas de photo de description pour le moment
                              <% end %>
                      </td>
                      <td>
                        <%= @all_restaurants[index_restaurant].email %>
                      </td>
                      <td class="center">
                        <%= link_to admin_site_restaurant_path(@all_restaurants[index_restaurant].id), method: :delete,:data => {confirm: 'Are you sure?'}, class:"btn" do %>
                          <%= content_tag :i,'' , class:"fa fa-trash" %>
                            <% end %>
                      </td>
                      <td class="center">
                        <%= link_to edit_admin_site_restaurant_path(@all_restaurants[index_restaurant].id), class:"btn" do %>
                          <%= content_tag :i,'' , class:"fa fa-edit" %>
                            <% end %>
                      </td>
                      <td class="center">
                        <%= link_to admin_site_restaurant_path(@all_restaurants[index_restaurant].id), class:"btn" do %>
                          <%= content_tag :i,'' , class:"fa fa-eye" %>
                            <% end %>
                      </td>
                    </tr>
                    <% end %>
                </tbody>
              </table>
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

</div>
<!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->
<script src="/assets/vendor/jquery/jquery.min.js"></script>
<script src="/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="/assets/vendor/metisMenu/metisMenu.min.js"></script>
<script src="/assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="/assets/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
<script src="/assets/vendor/datatables-responsive/dataTables.responsive.js"></script>
<script src="/assets/dist/js/sb-admin-2.js"></script>
<script>
  $(document).ready(function() {
    $('#dataTables-example').DataTable({
      responsive: true
    });
  });
</script>