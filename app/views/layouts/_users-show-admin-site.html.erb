<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Identité d'un utilisateur</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td rowspan="5">
            <% if @user_to_show.avatar.attached? %>
              <%= image_tag( @user_to_show.avatar,height:200) %>
                <% else %>
                  No picture
                  <% end %>
          </td>
          <td><b>Nom d'utilisateur:</b></td>
          <td>
            <%= @user_to_show.username %>
          </td>
        </tr>
        <tr>
          <td>Email:</td>
          <td>
            <%= @user_to_show.email %>
          </td>
        </tr>
        <tr>
          <td>Prénom(s):</td>
          <td>
            <%= @user_to_show.first_name %>
          </td>
        </tr>
        <tr>
          <td>Nom(s):</td>
          <td>
            <%= @user_to_show.last_name %>
          </td>
        </tr>
        <tr>
          <td>Numero de panier:</td>
          <td>
            <%= @user_to_show.cart_id %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <!-- /.row -->
  <div class="row">
    <nav aria-label="navigation">
      <ul class="pager">
        <li class="previous"><a href="#" title="Précédent">Précédent</a></li>
        <li class="next"><a href="#" title="Suivant">Suivant</a></li>
      </ul>
    </nav>
  </div>
</div>