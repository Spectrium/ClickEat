<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Identité d'un utilisateur
        <span style="font-size: 15px;">
          |<a href="<%= admin_site_users_path %>"><i class="fa fa-plus fa-fw"></i>Listes des utilisateurs</a>
          |<a href="<%= edit_admin_site_user_path(@user_to_show.id) %>"><i class="fa fa-edit fa-fw"></i>Editer cet utilisateur</a>
        </span>
      </h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td rowspan="5">
            <% if @user_to_show.avatar.attached? %>
              <%= image_tag( @user_to_show.avatar,height:200) %>
                <% else %>
                  No picture
                  <% end %>
          </td>
          <td><b>Nom d'utilisateur:</b></td>
          <td>
            <%= @user_to_show.username %>
          </td>
        </tr>
        <tr>
          <td><b>Email:</b></td>
          <td>
            <%= @user_to_show.email %>
          </td>
        </tr>
        <tr>
          <td><b>Prénom(s):</b></td>
          <td>
            <%= @user_to_show.first_name %>
          </td>
        </tr>
        <tr>
          <td><b>Nom(s):</b></td>
          <td>
            <%= @user_to_show.last_name %>
          </td>
        </tr>
        <tr>
          <td><b> Identité de panier:</b></td>
          <td>
            <%= @user_to_show.cart_id %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <!-- /.row -->
  <div class="row">
    <nav aria-label="navigation">
      <ul class="pager">
        <li class="previous">
          <% if @user_to_show.previous %>
            <%= link_to "Précédent", admin_site_user_path(@user_to_show.previous.id), title:"Précédent" %>
              <% else %>
                <%= link_to "Précédent", admin_site_user_path(@user_to_show.id), title:"Précédent" %>
                  <% end %>
        </li>
        <li class="next">
          <% if @user_to_show.next %>
            <%= link_to "Suivant", admin_site_user_path(@user_to_show.next.id), title:"Précédent" %>
              <% else %>
                <%= link_to "Suivant", admin_site_user_path(@user_to_show.id), title:"Suivant" %>
                  <% end %>
        </li>
      </ul>
    </nav>
  </div>
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>