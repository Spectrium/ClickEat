<!--OUR DISHES-->
<section id="our-dishes">
    <img src="<%= image_path('title-detail.png')%>" alt="title-detail">
    <h2>Nos plats</h2>
    <p>Cliquez sur le type de plat selon votre envi</p>
    <hr>
    <article id="dishes-left">
        <% for index_types_dishes_left in 0 ... (@type.size/2) %>
            <article>
                <div>
                    
                    <h5>
                        <a href="<%=type_path(@type[index_types_dishes_left].id)%>" class="link-type-dish">
                            <%= @type[index_types_dishes_left].name %>
                        </a>
                    </h5>
                    </div>
                <a href="<%=type_path(@type[index_types_dishes_left].id)%>" class="link-type-dish">
        <img src="<%= image_path(@type[index_types_dishes_left].icon) %>  " alt="hamburger"> 
          </a>
            </article>
            <% end %>
    </article>
    <article id="dishes-right">
        <% for index_types_dishes_left in @type.size/2 ... @type.size %>
            <article>
                <div>
                    <h5>
                        <a href="<%=type_path(@type[index_types_dishes_left].id)%>" class="link-type-dish">
                            <%= @type[index_types_dishes_left].name %>
                        </a>
                    </h5>
                </div>
                <a href="<%=type_path(@type[index_types_dishes_left].id)%>" class="link-type-dish">
        <img src="<%= image_path( @type[index_types_dishes_left].icon ) %>  " alt="hamburger">
        </a>
            </article>
            <% end %>
</section>